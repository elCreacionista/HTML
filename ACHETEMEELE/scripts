function User(nick) {
	this.nick = nick;
	if (nick == null || nick == "")
		this.nick = "Usuari";
	this.monedas = 1000;
	this.dinero = 30.0;
}
function setStatics(){
document.getElementById("name").innerHTML = user.nick;
document.getElementById("gold").innerHTML = user.monedas + " g";
document.getElementById("dinero").innerHTML = user.dinero + " â‚¬";
}



function GameMenu(){
let text = "<button onclick= 'AzarGameMenu()' class = 'button'>Juego de azar</button>";
text += "<button onclick= 'AzarGameMenu()' class = 'button'>Juego de azar</button>";
text += "<button onclick= 'AzarGameMenu()' class = 'button'>Juego de azar</button>";

document.querySelector("#GameMenu").style.display = "block";
document.querySelector("#GameMenu").innerHTML += text;
}






function AzarGame(gold, selected, numbers){
	user.monedas -= gold
	let variable = Math.floor(Math.random() * numbers);
	if (variable == selected){
		user.monedas += gold * numbers;
	}
	
}

